<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false </item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/water_color</item>
    </style>

    <style name="darkDialog">
        <item name="android:background">@drawable/dark_dialog_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="lightDialog">
        <item name="android:background">@drawable/light_dialog_shape</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>
</resources>